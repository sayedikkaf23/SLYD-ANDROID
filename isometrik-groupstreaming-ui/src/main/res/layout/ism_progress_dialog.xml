<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <TableRow
      android:layout_width="match_parent"
      android:layout_height="@dimen/ism_dp_64"
      android:layout_centerInParent="true"
      android:layout_marginBottom="@dimen/ism_dp_12"
      android:layout_marginLeft="@dimen/ism_dp_16"
      android:layout_marginRight="@dimen/ism_dp_16"
      android:layout_marginTop="@dimen/ism_dp_12"
      >

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        style="?android:attr/progressBarStyle"
        />

    <TextView
        android:id="@+id/tvProgress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/ism_dp_16"
        android:fontFamily="sans-serif"
        android:gravity="center|start"
        android:textColor="@android:color/black"
        android:textSize="@dimen/ism_sp_14"
        />
  </TableRow>
</RelativeLayout>