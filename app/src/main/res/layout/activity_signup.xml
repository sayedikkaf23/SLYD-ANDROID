            <!--user name-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_30"
                android:background="@drawable/curved_gray_color"
                android:padding="@dimen/dp_10"
                android:weightSum="5">

                <TextView
                    android:id="@+id/textUserName"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:padding="@dimen/dp_5"
                    android:text="@string/user_name1"
                    android:textSize="@dimen/medium"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/etUserName"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:background="@android:color/transparent"
                    android:digits="@string/digits_both"
                    android:hint="@string/hint_user_name"
                    android:inputType="textPersonName"
                    android:lines="1"
                    android:maxLength="16"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/star_black"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:id="@+id/iV_userNameCheck"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_tick"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_removeUsernameText"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/remove_all_x"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvUserNamewarning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_3"
                android:drawableStart="@drawable/ic_warning"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center_horizontal"
                android:text="@string/usernameWarning"
                android:textColor="@color/light_black"
                android:textSize="12sp"
                android:visibility="gone"></TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/divider"
                android:visibility="gone" />

            <!--email-->
            <LinearLayout
                android:id="@+id/ll_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:background="@drawable/curved_gray_color"
                android:padding="@dimen/dp_10"
                android:visibility="gone"
                android:weightSum="5">

                <TextView
                    android:id="@+id/textEmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:padding="@dimen/dp_10"
                    android:text="@string/email"
                    android:textSize="@dimen/medium"
                    android:visibility="gone" />


                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:background="@android:color/transparent"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:textColor="@color/star_black"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:id="@+id/iV_emailClear"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_tick"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_removeEmailText"
