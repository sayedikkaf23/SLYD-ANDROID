                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:background="@android:color/transparent"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:maxLength="24"
                    android:maxLines="1"
                    android:textColor="@color/star_black"
                    android:textSize="@dimen/sp_14" />

                <ToggleButton
                    android:id="@+id/tbPassword"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:background="@drawable/eye_toggle"
                    android:disabledAlpha="?android:attr/disabledAlpha"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/divider"
                android:visibility="gone" />

            <!--confirm password-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:visibility="gone"
                android:weightSum="5">

                <TextView
                    android:id="@+id/textConfirmPassword"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:padding="@dimen/dp_5"
                    android:text="@string/confirm"
                    android:textSize="@dimen/medium" />

                <EditText
                    android:id="@+id/etConfirmPassword"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_25"
                    android:layout_weight="3"
                    android:background="@android:color/transparent"
                    android:hint="@string/enter_confirm_password"
                    android:inputType="textPassword"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:padding="@dimen/dp_5"
                    android:textColor="@color/star_black"
                    android:textSize="@dimen/medium" />

                <ToggleButton
                    android:id="@+id/tbConfirmPassword"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_25"
                    android:background="@drawable/eye_toggle"
                    android:disabledAlpha="?android:attr/disabledAlpha"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/divider"
                android:visibility="gone" />

            <!--referral-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:visibility="gone"
                android:weightSum="5">

                <TextView
                    android:id="@+id/textReferralCode"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:padding="@dimen/dp_5"
                    android:text="@string/referral_code"
                    android:textSize="@dimen/medium" />

                <EditText
                    android:id="@+id/etReferralCode"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@android:color/transparent"
                    android:hint="@string/enter_referral_code"
                    android:inputType="textCapSentences"
                    android:maxLength="20"
                    android:padding="@dimen/dp_5"
                    android:text="@string/text_1111"
                    android:textColor="@color/star_black"
                    android:textSize="@dimen/medium" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/divider"
                android:visibility="gone" />

            <CheckBox
                android:id="@+id/cbTerms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/minus_5"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center_vertical"
                android:text="@string/tapAgreeAndContinue"
                android:textSize="@dimen/sp_12"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_terms_conditions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_10"
                android:gravity="center"
                android:text="@string/signupconditions"
                android:textColor="@color/gray2"
                android:textSize="@dimen/sp_14"></TextView>

            <TextView
                android:id="@+id/tv_verify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_otp_figures"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_marginBottom="@dimen/dp_20"
                android:background="@drawable/curved_primary_color"
                android:fontFamily="@font/sf_pro_semibold"
                android:gravity="center"
                android:padding="@dimen/dp_10"
                android:text="@string/signupheader"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>
    </LinearLayout>

    <!--UI for to enter USERNAME -->
    <LinearLayout
        android:id="@+id/ll_Username_UI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rL_actionBar"
        android:layout_margin="@dimen/dp_20"
        android:background="@drawable/curved_accent_white"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_25"
            android:background="@color/color_white">

            <ImageView
                android:id="@+id/ivClose_username"
                style="?actionButtonStyle"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                app:srcCompat="@drawable/remove"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/tvHeader_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_toStartOf="@+id/btn_Done_username"
                android:layout_toEndOf="@+id/ivClose_username"
                android:fontFamily="@font/sf_pro_semibold"
                android:gravity="center_horizontal"
                android:text="@string/welcome"
                android:textAlignment="center"
                android:textColor="@color/star_black"
                android:textSize="@dimen/title" />

            <Button
                android:id="@+id/btn_Done_username"
                style="?actionButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="@string/Done"
                android:textAlignment="textEnd"
                android:textAllCaps="false"
                android:textColor="@color/mineShaft"
                android:textSize="@dimen/medium"
                android:visibility="invisible"
                tools:ignore="RtlCompat" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tV_msg_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/thirty_dp"
            android:layout_marginEnd="@dimen/thirty_dp"
            android:fontFamily="@font/sf_pro_regular"
            android:gravity="center"
            android:text="@string/usernamedesc"
            android:textColor="@color/gray2"
            android:textSize="@dimen/sp_14" />

        <!--user name-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_30"
            android:background="@drawable/curved_gray_color"
            android:padding="@dimen/dp_15"
            android:weightSum="5">

            <TextView
                android:id="@+id/textUserName_register"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="@dimen/dp_5"
                android:text="@string/user_name1"
                android:textSize="@dimen/medium"
                android:visibility="gone" />

            <EditText
                android:id="@+id/etUserName_register"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:background="@android:color/transparent"
                android:hint="@string/hint_user_name"
                android:inputType="textPersonName"
                android:maxLength="50"
                android:maxLines="1"
                android:textColor="@color/star_black"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_15"
            android:gravity="center"
            android:text="@string/usernametextcondition"
            android:textColor="@color/gray2"></TextView>


        <RelativeLayout
            android:id="@+id/rL_next_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/dp_30"
            android:background="@drawable/curved_primary_color">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/fifty_dp"
                android:layout_marginTop="@dimen/ten_dp"
                android:layout_marginEnd="@dimen/fifty_dp"
                android:layout_marginBottom="@dimen/ten_dp"
                android:fontFamily="@font/sf_pro_semibold"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:text="@string/Continue_small"
                android:textAllCaps="false"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp_16" />
        </RelativeLayout>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_26"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvAlreadyMember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_already_a_member"
                android:textColor="@color/star_grey"
                android:textSize="@dimen/medium" />

            <TextView
                android:id="@+id/tvSignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:text="@string/Sign_In"
                android:textColor="@color/base_color"
                android:textSize="@dimen/medium" />
        </LinearLayout>

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/dp_10"
        android:visibility="gone" />
</RelativeLayout>