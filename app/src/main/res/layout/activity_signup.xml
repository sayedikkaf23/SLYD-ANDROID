<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="visible" />

    <!--    <ImageView-->
    <!--        android:id="@+id/imageView"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent"-->
    <!--        android:layout_centerInParent="true"-->
    <!--        android:src="@color/colorPrimary" />-->

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="top"
        android:background="@color/color_white"
        android:visibility="gone"
        app:layout_collapseMode="pin">
        <!--actionbar-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/color_white">

            <ImageView
                android:id="@+id/ivBack"
                style="?actionButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/minus_15"
                android:tint="@color/color_tint"
                app:srcCompat="@drawable/ic_arrow_back_black_24dp"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_toStartOf="@+id/done"
                android:layout_toEndOf="@+id/ivBack"
                android:fontFamily="@font/sf_pro_semibold"
                android:gravity="center_horizontal"
                android:text="@string/signup"
                android:textAlignment="center"
                android:textColor="@color/star_black"
                android:textSize="@dimen/title" />

            <Button
                android:id="@+id/done"
                style="?actionButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="@string/next"
                android:textAlignment="textEnd"
                android:textAllCaps="false"
                android:textColor="@color/mineShaft"
                android:textSize="@dimen/medium"
                tools:ignore="RtlCompat" />

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>


    <!-- UI for normal signupflow-->
    <LinearLayout
        android:id="@+id/ll_signup_UI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomBar"
        android:layout_below="@+id/toolbar"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_0"
        android:background="@drawable/curved_accent_white"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:orientation="vertical"
            android:padding="@dimen/dp_16">

            <!--Social login buttons-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:baselineAligned="false"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="2">

                <FrameLayout
                    android:id="@+id/FrameLayout1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1">

                    <com.facebook.login.widget.LoginButton
                        android:id="@+id/fbSignIn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/fBCustom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/facebook_button" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/FrameLayout2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/googleSignIn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/google_button" />
                </FrameLayout>

            </LinearLayout>

            <!--Login With Divider-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal"
                android:visibility="gone">

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dp_5"
                    android:layout_toStartOf="@+id/text"
                    android:background="@color/divider" />

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="@string/or_continue_with"
                    android:textColor="@color/star_black" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dp_5"
                    android:layout_toEndOf="@+id/text"
                    android:background="@color/divider" />

            </RelativeLayout>

            <!--profile pc-->
            <RelativeLayout
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_20"
                android:visibility="gone">


                <chat.hola.com.app.Utilities.RoundedImageView
                    android:id="@+id/ivProfilePic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:foreground="@drawable/ripple_selector"
                    app:srcCompat="@drawable/profile_one" />


                <ImageButton
                    android:id="@+id/ibAdd"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/ic_add_circle_colored" />
            </RelativeLayout>

            <Switch
                android:id="@+id/isPrivate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp_5"
                android:layoutDirection="rtl"
                android:padding="@dimen/dp_10"
                android:switchPadding="@dimen/dp_10"
                android:text="@string/Public"
                android:textColor="@color/star_black"
                android:textSize="@dimen/medium"
                android:visibility="gone" />

            <!--signup header-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/color_white">

                <ImageView
                    android:id="@+id/ivClose"
                    style="?actionButtonStyle"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_16"
                    app:srcCompat="@drawable/ic_arrow_back_black_24dp"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/tvHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_toStartOf="@+id/btndone"
                    android:layout_toEndOf="@+id/ivClose"
                    android:fontFamily="@font/sf_pro_semibold"
                    android:gravity="center_horizontal"
                    android:text="@string/signupheader"
                    android:textAlignment="center"
                    android:textColor="@color/star_black"
                    android:textSize="@dimen/et_text" />

                <Button
                    android:id="@+id/btndone"
                    style="?actionButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="@string/Done"
                    android:textAlignment="textEnd"
                    android:textAllCaps="false"
                    android:textColor="@color/mineShaft"
                    android:textSize="@dimen/medium"
                    android:visibility="invisible"
                    tools:ignore="RtlCompat" />

            </RelativeLayout>

            <TextView
                android:id="@+id/singup_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/signupdesc"
                android:textColor="@color/gray2"
                android:textSize="@dimen/sp_14"></TextView>

            <!--Login With OTP-->
            <RelativeLayout
                android:id="@+id/rl_reg_Mob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_30"
                android:background="@drawable/curved_gray_color"
                android:padding="@dimen/dp_5"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/countryFlag"
                    android:layout_width="@dimen/dp_35"
                    android:layout_height="@dimen/dp_30"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/flag_ca"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvRegion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/countryFlag"
                    android:layout_toRightOf="@+id/countryFlag"
                    android:paddingLeft="4dp"
                    android:paddingTop="8dp"
                    android:paddingRight="4dp"
                    android:paddingBottom="8dp"
                    android:text="+91"
                    android:textColor="@color/red"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_toEndOf="@+id/tvRegion"
                    android:layout_toRightOf="@+id/tvRegion"
                    android:background="@null"
                    android:ems="10"
                    android:fontFamily="@font/sf_pro_semibold"
                    android:hint="@string/phone_number"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="16"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:singleLine="true"
                    android:textColor="@color/allBlackTxtColor"
                    android:textSize="@dimen/fourteen_sp" />

                <ImageView
                    android:id="@+id/iV_phoneNumberCheck"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_tick"
                    android:visibility="gone" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tvUserPhonewarning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_3"
                android:drawableStart="@drawable/ic_warning"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center_horizontal"
                android:text="@string/phoneNumberWarning"
                android:textColor="@color/light_black"
                android:textSize="12sp"
                android:visibility="invisible"></TextView>
