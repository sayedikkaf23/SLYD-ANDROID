<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_media"
        android:layout_width="@dimen/dp_160"
        android:layout_height="@dimen/dp_42"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@color/color_white"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/history"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_5"

            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginStart="@dimen/dp_16"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_restore_black_svg_24px"

            />


        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/history"
            android:layout_toRightOf="@+id/history"

            android:text="@string/string_637"
            android:textColor="@color/color_text_black"

            android:textSize="@dimen/small" />

    </RelativeLayout>


    <View
        android:id="@+id/v"
        android:layout_width="@dimen/dp_160"
        android:layout_height="@dimen/dp_1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/rl_media"
        android:background="@color/color_line_gray" />

    <RelativeLayout
        android:id="@+id/rl_delete"
        android:layout_width="@dimen/dp_160"
        android:layout_height="@dimen/dp_42"
        android:layout_alignParentEnd="true"

        android:layout_alignParentRight="true"

        android:layout_below="@+id/v"
        android:background="@color/color_white"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/delete"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/dp_5"

            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginStart="@dimen/dp_16"

            android:visibility="visible"
            app:srcCompat="@drawable/ic_delete_forever_black_24px" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/delete"
            android:layout_toRightOf="@+id/delete"
            android:text="@string/string_640"
            android:textColor="@color/color_text_black"

            android:textSize="@dimen/small" />


    </RelativeLayout>


    <View
        android:id="@+id/v2"
        android:layout_width="@dimen/dp_160"
        android:layout_height="@dimen/dp_1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/rl_delete"
        android:background="@color/color_line_gray" />

    <RelativeLayout
        android:id="@+id/rl_last"
        android:layout_width="@dimen/dp_160"
        android:layout_height="@dimen/dp_42"
        android:layout_alignParentEnd="true"

        android:layout_alignParentRight="true"

        android:layout_below="@+id/v2"
        android:background="@color/color_white"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/button_done"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/dp_5"

            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginStart="@dimen/dp_16"

            android:visibility="visible"
            app:srcCompat="@drawable/cancel_normal" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/button_done"
            android:layout_toRightOf="@+id/button_done"
            android:text="@string/string_691"
            android:textColor="@color/color_text_black"

            android:textSize="@dimen/small" />
    </RelativeLayout>


    <View
        android:id="@+id/v3"
        android:layout_width="@dimen/dp_160"
        android:layout_height="@dimen/dp_1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/rl_last"
        android:background="@color/color_line_gray" />

    <RelativeLayout
        android:id="@+id/rl_wallpaper"
        android:layout_width="@dimen/dp_160"
        android:layout_height="@dimen/dp_42"
        android:layout_alignParentEnd="true"

        android:layout_alignParentRight="true"

        android:layout_below="@+id/v3"
        android:background="@color/color_white"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/button_wallpaper"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/dp_5"

            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginStart="@dimen/dp_16"
            android:padding="@dimen/dp_1"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_photo_library_black_24px" />

        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/button_wallpaper"
            android:layout_toRightOf="@+id/button_wallpaper"
            android:text="@string/Wallpaper"
            android:textColor="@color/color_text_black"

            android:textSize="@dimen/small" />
    </RelativeLayout>
</RelativeLayout>