<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">


    <RelativeLayout
        android:id="@+id/contactImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_curve_with_stock_only">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/storeImage2"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_1"
            app:srcCompat="@drawable/chat_attachment_profile_default_image_frame" />


        <TextView
            android:id="@+id/contactName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_7"
            android:layout_toRightOf="@+id/storeImage2"
            android:ellipsize="end"
            android:fontFamily="@font/euclid_circular_b_semibold"
            android:maxLines="1"
            android:text="@string/contacts_name"
            android:textColor="@color/color_text_search"
            android:textSize="@dimen/sp_14" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/contactSelected"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/dp_6"
            android:background="@drawable/select_circle"
            android:padding="@dimen/dp_3"
            android:tint="@color/color_text_search"
            app:srcCompat="@drawable/cancel_normal"
            android:visibility="gone" />



    </RelativeLayout>



</RelativeLayout>