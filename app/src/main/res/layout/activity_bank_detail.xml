<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/header"
        layout="@layout/layout_toolbar" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_above="@+id/llContainer"
        android:layout_below="@+id/header"
        android:background="@color/gray1" />

    <LinearLayout
        android:id="@+id/llContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnDelete"
        android:layout_below="@+id/header"
        android:orientation="vertical"
        android:padding="@dimen/page_padding">

        <TextView
            android:id="@+id/tvTitleBankAccountNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_semibold"
            android:text="@string/account_number"
            android:textColor="@color/gray1"
            android:textSize="@dimen/small" />

        <TextView
            android:id="@+id/tvBankAccountNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_medium"
            android:textColor="@color/star_black"
            android:textSize="@dimen/medium" />

        <TextView
            android:id="@+id/tvTitleBank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:fontFamily="@font/sf_pro_semibold"
            android:text="@string/bank"
            android:textColor="@color/gray1"
            android:textSize="@dimen/small" />

        <TextView
            android:id="@+id/tvBank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_medium"
            android:textColor="@color/star_black"
            android:textSize="@dimen/medium" />

        <TextView
            android:id="@+id/tvTitleAccountType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:fontFamily="@font/sf_pro_semibold"
            android:text="@string/account_type"
            android:textColor="@color/gray1"
            android:textSize="@dimen/small" />

        <TextView
            android:id="@+id/tvAccountType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_medium"
            android:textColor="@color/star_black"
            android:textSize="@dimen/medium" />


        <TextView
            android:id="@+id/tvTitleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:fontFamily="@font/sf_pro_semibold"
            android:text="@string/account_holder_name"
            android:textColor="@color/gray1"
            android:textSize="@dimen/small" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_medium"
            android:textColor="@color/star_black"
            android:textSize="@dimen/medium" />


    </LinearLayout>

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/blue_curved_border"
        android:text="@string/delete"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/big" />

</RelativeLayout>