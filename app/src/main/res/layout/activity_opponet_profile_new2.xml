<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true">


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/my_appbar_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_400"
            android:fitsSystemWindows="true"

            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:collapsedTitleGravity="center"
                app:contentScrim="@color/color_white"
                app:expandedTitleMarginEnd="@dimen/dp_64"
                app:expandedTitleMarginStart="@dimen/dp_48"


                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <FrameLayout
                    android:id="@+id/frame_profile"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_400"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:id="@+id/ivProfile"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_400"
                        android:background="#FFCCBC"
                        android:src="@drawable/profile_one" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_80"
                        android:layout_gravity="bottom"
                        android:alpha="0.25"
                        android:background="#E0E1E4"
                        />

                    <ImageView
                        android:id="@+id/ivEditProfile"
                        style="?actionButtonStyle"
                        android:layout_width="@dimen/thirty_dp"
                        android:layout_height="@dimen/thirty_dp"
                        android:layout_gravity="bottom|end"
                        android:layout_margin="@dimen/dp_5"
                        android:background="@drawable/circular_bg_filled_pink"
                        android:padding="@dimen/five_dp"
                        android:src="@drawable/edit_profile"
                        android:visibility="gone" />
                </FrameLayout>


                <!--                <androidx.appcompat.widget.AppCompatImageView-->

<!--                    android:id="@+id/userImage"-->


<!--                    android:layout_width="match_parent"-->

<!--                    android:layout_height="match_parent"-->
<!--                    android:background="#FFCCBC"-->
<!--                    android:foreground="?android:attr/selectableItemBackground"-->
<!--                    android:scaleType="fitCenter"-->

<!--                    android:src="@drawable/profile_one"-->

<!--                    app:layout_collapseMode="parallax" />-->


<!--                <androidx.appcompat.widget.Toolbar-->
<!--                    android:id="@+id/toolbar"-->

<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="?attr/actionBarSize"-->
<!--                    android:background="@android:color/transparent"-->
<!--                    android:theme="@style/ThemeOverlay.AppCompat.Light"-->
<!--                    app:layout_scrollFlags="scroll|enterAlways"-->
<!--                    android:visibility="gone">-->

<!--                </androidx.appcompat.widget.Toolbar>-->

            </com.google.android.material.appbar.CollapsingToolbarLayout>




        </com.google.android.material.appbar.AppBarLayout>



        <androidx.core.widget.NestedScrollView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <androidx.core.widget.NestedScrollView
                    android:id="@+id/nsvOption"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">

                    <LinearLayout
                        android:id="@+id/llOptions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tvViewProfile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableEnd="@drawable/ic_next_arrow_icon"
                                android:drawableTint="@color/base_color"
                                android:padding="@dimen/dp_10"
                                android:text="@string/view_social_profile"
                                android:textColor="@color/star_black"
                                android:textSize="@dimen/sp_15" />

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_0_5"
                            android:background="@color/star_grey" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tvHideMyPost"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dp_10"
                                android:text="@string/hide_my_posts"
                                android:textColor="@color/star_black"
                                android:textSize="@dimen/sp_15" />

                            <Switch
                                android:id="@+id/swHideMyPost"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerInParent="true"
                                android:layout_marginEnd="@dimen/dp_5"
                                android:checked="true"
                                android:theme="@style/SCBSwitch" />

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_0_5"
                            android:background="@color/star_grey" />

                        <LinearLayout
                            android:id="@+id/linearMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_5"
                                android:layout_marginBottom="@dimen/dp_5">

                                <TextView
                                    android:id="@+id/tvLastSeen"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/dp_10"
                                    android:text="@string/string_692"
                                    android:textColor="@color/star_black"
                                    android:textSize="@dimen/sp_15" />

                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_0_5"
                                android:background="@color/star_grey" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_5"
                                android:layout_marginBottom="@dimen/dp_5">

                                <TextView
                                    android:id="@+id/tvDeleteChat"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/dp_10"
                                    android:text="@string/string_638"
                                    android:textColor="@color/star_black"
                                    android:textSize="@dimen/sp_15" />

                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_0_5"
                                android:background="@color/star_grey" />
                        </LinearLayout>

                    </LinearLayout>

                </androidx.core.widget.NestedScrollView>

                <androidx.core.widget.NestedScrollView
                    android:id="@+id/view"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">


                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:background="@color/color_background_gray">


                        <RelativeLayout
                            android:id="@+id/rl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:background="@color/color_white">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cv5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_5"
                                android:layout_marginBottom="@dimen/dp_5"
                                android:visibility="gone"

                                >


                                <RelativeLayout


                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp_62"
                                    android:elevation="@dimen/dp_1">


                                    <androidx.appcompat.widget.SwitchCompat
                                        android:id="@+id/iv5"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"

                                        android:layout_alignParentEnd="true"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginEnd="@dimen/dp_13"
                                        android:layout_marginRight="@dimen/dp_13"
                                        android:theme="@style/muteSwitch"

                                        />


                                    <TextView

                                        android:id="@+id/tv4"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"


                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentLeft="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="@dimen/dp_13"
                                        android:layout_marginLeft="@dimen/dp_13"
                                        android:layout_toStartOf="@+id/iv5"
                                        android:layout_toLeftOf="@+id/iv5"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:text="@string/Mute"
                                        android:textColor="@color/color_black"
                                        android:textSize="@dimen/big" />
                                </RelativeLayout>


                            </androidx.cardview.widget.CardView>

                            <RelativeLayout
                                android:id="@+id/fulldetails"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/cv5"
                                android:layout_marginBottom="@dimen/dp_20">

                                <LinearLayout
                                    android:id="@+id/ll_profile"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_20"
                                    android:layout_marginTop="@dimen/dp_20"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tvProfileName"
                                        android:layout_width="200dp"
                                        android:layout_height="@dimen/dp_45"
                                        android:layout_gravity="center_vertical"
                                        android:text="Profile Name"
                                        android:textColor="@color/color_profile_name"
                                        android:textSize="@dimen/dp_28"
                                        android:textStyle="bold"
                                        android:visibility="visible" />

                                    <TextView
                                        android:id="@+id/tvUsername"
                                        android:layout_width="112dp"
                                        android:layout_height="@dimen/dp_22"
                                        android:layout_marginTop="@dimen/dp_5"
                                        android:gravity="start"
                                        android:text="@string/username"
                                        android:textColor="@color/gray"
                                        android:textSize="@dimen/dp_16"
                                        android:textStyle="bold"
                                        android:visibility="visible" />

                                    <TextView
                                        android:id="@+id/tvNumberss"
                                        android:layout_width="112dp"
                                        android:layout_height="@dimen/dp_22"
                                        android:layout_marginTop="@dimen/dp_5"
                                        android:gravity="start"
                                        android:text="+917878787878"
                                        android:textColor="@color/gray"
                                        android:textSize="@dimen/dp_18"
                                        android:visibility="gone" />


                                </LinearLayout>

                                <ImageView
                                    android:id="@+id/iV_more"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginTop="@dimen/dp_30"
                                    android:layout_marginRight="@dimen/dp_20"
                                    android:scaleType="center"
                                    android:src="@drawable/ic_vertical_dots"
                                    android:visibility="gone" />


                                <ImageView
                                    android:id="@+id/iV_settings"
                                    android:layout_width="@dimen/dp_32"
                                    android:layout_height="@dimen/dp_32"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginTop="@dimen/dp_12"
                                    android:layout_marginEnd="@dimen/dp_12"
                                    android:layout_marginRight="@dimen/dp_12"
                                    android:padding="@dimen/dp_5"
                                    android:src="@drawable/ic_info_more"
                                    android:visibility="gone" />

                                <RelativeLayout
                                    android:id="@+id/rlBio"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/ll_profile"
                                    android:layout_marginLeft="@dimen/dp_20"
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:layout_marginRight="@dimen/dp_20"
                                    android:layout_marginBottom="@dimen/dp_20"
                                    android:visibility="visible">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/tvBio"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:text="Bio :"
                                            android:textColor="@color/color_welcome_text"
                                            android:textSize="@dimen/small"
                                            android:textStyle="bold"
                                            android:visibility="visible" />

                                        <TextView
                                            android:id="@+id/text_about"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_marginTop="@dimen/dp_5"
                                            android:text="Mollis quis a vitae leo facilisis mauris leo. Sit vitae aenean parturient tincidunt urna mollis enim aliquet tortor."
                                            android:textColor="@color/gray"
                                            android:textSize="@dimen/sp_12"

                                            android:visibility="visible" />

                                    </LinearLayout>


                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/rlemailDetails"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/rlBio"
                                    android:layout_marginLeft="@dimen/dp_20"
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:layout_marginRight="@dimen/dp_20"
                                    android:visibility="visible">

                                    <LinearLayout
                                        android:id="@+id/ll_email"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:weightSum="1">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_weight="0.4"
                                            android:text="@string/Email"
                                            android:textColor="@color/gray"
                                            android:textSize="@dimen/sp_16"
                                            android:textStyle="bold"
                                            android:visibility="visible" />

                                        <TextView
                                            android:id="@+id/tvEmail"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_weight="0.6"
                                            android:textColor="@color/color_black"
                                            android:textSize="@dimen/sp_16"
                                            android:textStyle="normal"

                                            android:visibility="visible" />

                                    </LinearLayout>

                                    <View
                                        android:id="@+id/viewss"
                                        android:layout_width="match_parent"
                                        android:layout_height="0.5dp"
                                        android:layout_below="@+id/ll_email"
                                        android:layout_marginTop="@dimen/dp_5"
                                        android:background="@color/gray"
                                        android:visibility="visible" />


                                    <LinearLayout
                                        android:id="@+id/ll_phone"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/viewss"
                                        android:layout_marginTop="@dimen/dp_5"
                                        android:orientation="horizontal"
                                        android:weightSum="1">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_weight="0.4"
                                            android:text="@string/phoneNumber"
                                            android:textColor="@color/gray"
                                            android:textSize="@dimen/sp_16"
                                            android:textStyle="bold"
                                            android:visibility="visible" />

                                        <TextView
                                            android:id="@+id/tvNumber"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_weight="0.6"
                                            android:textColor="@color/color_black"
                                            android:textSize="@dimen/sp_16"
                                            android:textStyle="normal"
                                            android:visibility="visible" />

                                    </LinearLayout>


                                </RelativeLayout>


                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/media_rl"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/fulldetails"
                                android:background="#0D0A2040">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/dp_10">

                                    <RelativeLayout
                                        android:id="@+id/mediaHeader_rl"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/dp_40">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentStart="true"
                                            android:layout_alignParentLeft="true"
                                            android:layout_centerVertical="true"
                                            android:layout_marginLeft="@dimen/dp_20"
                                            android:text="@string/Media"
                                            android:textColor="@color/color_black"
                                            android:textSize="@dimen/sp_16"
                                            android:textStyle="bold" />


                                        <androidx.appcompat.widget.AppCompatImageView
                                            android:id="@+id/arrow_rl"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentEnd="true"
                                            android:layout_alignParentRight="true"
                                            android:layout_centerVertical="true"
                                            android:layout_marginEnd="@dimen/dp_13"

                                            android:layout_marginRight="@dimen/dp_13"
                                            android:tint="@color/color_gray_chatscreen"
                                            app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24px" />


                                        <TextView


                                            android:id="@+id/mediaCount"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_margin="@dimen/dp_5"
                                            android:layout_toStartOf="@+id/arrow_rl"
                                            android:layout_toLeftOf="@+id/arrow_rl"
                                            android:text="0"
                                            android:textColor="@color/color_gray_chatscreen"
                                            android:textSize="@dimen/small" />


                                    </RelativeLayout>


                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/media_rv"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/dp_70"
                                        android:layout_below="@+id/mediaHeader_rl"
                                        android:layout_marginStart="@dimen/dp_5"
                                        android:layout_marginTop="@dimen/dp_5"
                                        android:layout_marginEnd="@dimen/dp_5">

                                    </androidx.recyclerview.widget.RecyclerView>
                                </RelativeLayout>

                            </RelativeLayout>

                            <TextView
                                android:id="@+id/tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/media_rl"

                                android:layout_alignParentStart="true"
                                android:layout_alignParentLeft="true"
                                android:layout_marginStart="@dimen/dp_13"
                                android:layout_marginLeft="@dimen/dp_13"
                                android:layout_marginTop="@dimen/dp_13"
                                android:layout_marginBottom="@dimen/dp_5"
                                android:layout_toStartOf="@+id/iv_call"
                                android:layout_toLeftOf="@+id/iv_call"
                                android:ellipsize="end"
                                android:maxLines="1"

                                android:text="@string/PhoneStatus"
                                android:textColor="@color/color_black"
                                android:visibility="gone" />


                            <TextView
                                android:id="@+id/userIdentifier"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentLeft="true"
                                android:layout_marginStart="@dimen/dp_13"
                                android:layout_marginLeft="@dimen/dp_13"
                                android:layout_toStartOf="@+id/iv_call"
                                android:layout_toLeftOf="@+id/iv_call"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@string/PhoneStatus"
                                android:textColor="@color/color_gray_chatscreen"
                                android:textSize="@dimen/sp_15"
                                android:visibility="gone" />


                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/iv_chat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/media_rl"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginStart="@dimen/dp_8"
                                android:layout_marginLeft="@dimen/dp_8"
                                android:layout_marginTop="@dimen/dp_13"
                                android:layout_marginEnd="@dimen/dp_13"

                                android:layout_marginRight="@dimen/dp_13"
                                android:tint="@color/color_gray_chatscreen"
                                android:visibility="gone"
                                app:srcCompat="@drawable/ic_message_black_24px" />


                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/iv_call"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/media_rl"
                                android:layout_marginTop="@dimen/dp_10"
                                android:layout_toStartOf="@+id/iv_chat"
                                android:layout_toLeftOf="@+id/iv_chat"
                                android:tint="@color/color_gray_chatscreen"
                                android:visibility="gone"
                                app:srcCompat="@drawable/call_call_icon" />


                            <View

                                android:id="@+id/v2"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_1"
                                android:layout_below="@+id/userIdentifier"
                                android:layout_marginTop="@dimen/dp_13"
                                android:background="@color/color_line_gray"
                                android:visibility="gone" />


                            <TextView

                                android:id="@+id/userStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/v2"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentLeft="true"
                                android:layout_margin="@dimen/dp_13"
                                android:layout_toStartOf="@+id/iv_call"

                                android:layout_toLeftOf="@+id/iv_call"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@string/PhoneStatus"
                                android:textColor="@color/color_gray_chatscreen"
                                android:textSize="@dimen/sp_15"
                                android:visibility="gone" />


                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_below="@+id/userStatus"
                                android:background="@color/color_line_gray"

                                android:visibility="gone" />
                        </RelativeLayout>


                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rl"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:visibility="gone">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_62"
                                android:elevation="@dimen/dp_1">


                                <androidx.appcompat.widget.AppCompatImageView

                                    android:id="@+id/iv"
                                    android:layout_width="wrap_content"

                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"

                                    android:layout_marginStart="@dimen/dp_13"
                                    android:layout_marginLeft="@dimen/dp_13"
                                    android:tint="@color/recording_audio"
                                    app:srcCompat="@drawable/ic_block_black_24px" />


                                <TextView
                                    android:id="@+id/tv2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="@dimen/dp_18"
                                    android:layout_marginLeft="@dimen/dp_18"
                                    android:layout_toEndOf="@+id/iv"
                                    android:layout_toRightOf="@+id/iv"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="@string/Block"
                                    android:textColor="@color/recording_audio"
                                    android:textSize="@dimen/big" />
                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                        <RelativeLayout
                            android:id="@+id/rl_block"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rl"
                            android:layout_marginTop="@dimen/dp_20"
                            android:background="@color/white"
                            android:visibility="visible">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/dp_20"
                                android:orientation="vertical">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <RelativeLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.15">


                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/ic_block_lock" />
                                    </RelativeLayout>


                                    <TextView
                                        android:id="@+id/text_block"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:layout_weight="0.85"
                                        android:textColor="#FF1D62"
                                        android:textSize="@dimen/sp_16"
                                        android:textStyle="bold" />

                                </LinearLayout>


                                <LinearLayout
                                    android:id="@+id/llReportuser"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_20"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <RelativeLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.15">


                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/ic_block_contact" />
                                    </RelativeLayout>


                                    <TextView
                                        android:id="@+id/tv_reportText"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center_vertical"
                                        android:layout_weight="0.85"
                                        android:text="@string/report"
                                        android:textColor="#FF1D62"
                                        android:textSize="@dimen/sp_16"
                                        android:textStyle="bold" />

                                </LinearLayout>


                            </LinearLayout>


                        </RelativeLayout>


                    </RelativeLayout>


                </androidx.core.widget.NestedScrollView>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/close"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginStart="@dimen/dp_13"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_13"

        android:elevation="@dimen/dp_5"
        android:foreground="@drawable/ripple_selector"
        android:tint="@color/color_black"
        app:srcCompat="@drawable/ic_back_new1"  />

</RelativeLayout>