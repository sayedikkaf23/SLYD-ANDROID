        <!--android:textColor="@color/color_white"-->
        <!--android:textSize="@dimen/sixteen_sp"-->
        <!--tools:ignore="RtlSymmetry" />-->
    </LinearLayout>

    <include
        layout="@layout/fragment_contact_tab"
        android:visibility="gone" />
</RelativeLayout>
