<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/ivEmpty"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/five_dp"
            app:srcCompat="@drawable/ic_facebook_empty_icon" />

        <TextView
            android:id="@+id/tvEmpty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:text="@string/FbContactErrorMsg"
            android:textAlignment="center"
            android:textColor="@color/color_text_gray_light"
            android:textSize="@dimen/title" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/llFacebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/ten_dp">

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:layout_marginStart="@dimen/twenty_dp"
            android:layout_marginTop="@dimen/fifty_dp"
            android:layout_marginEnd="@dimen/twenty_dp"
            android:layout_marginBottom="@dimen/twenty_dp"
            app:srcCompat="@drawable/ic_default_fb_icon" />

        <TextView
            android:id="@+id/tvTitleFb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/five_dp"
            android:text="@string/FindFacebookFriend"
            android:textAlignment="center"
            android:textColor="@color/color_text_black"
            android:textSize="@dimen/eighteen_dp" />

        <TextView
            android:id="@+id/tvMsgFb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/fourteen_sp"
            android:text="@string/FacebookFragMsg"
            android:textAlignment="center"
            android:textColor="@color/color_text_gray"
            android:textSize="@dimen/sp_15" />

        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_200"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_30" />

        <!--<Button-->
