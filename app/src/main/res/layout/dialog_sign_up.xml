<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_round_corner"
  >

        <ImageView
            android:id="@+id/ivDialogSignUp_cancel"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_margin="@dimen/dp_25"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_close" />

        <ImageView
            android:id="@+id/ivDialogSignUp_image"
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_300"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivDialogSignUp_cancel"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_warning" />


        <TextView
            android:id="@+id/tvDialogSignUp_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_13"
            android:layout_marginEnd="@dimen/dp_13"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:maxLines="2"
            android:padding="@dimen/dp_5"
            android:text="@string/dialog_sign_up_text"
            android:textColor="#000000"
            android:textSize="@dimen/sp_12"
            app:layout_constraintTop_toBottomOf="@+id/ivDialogSignUp_image"
            tools:layout_editor_absoluteX="@dimen/dp_1" />
    </androidx.constraintlayout.widget.ConstraintLayout>

