<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="chat.hola.com.app.Activities.SelectLoginActivity">


    <ImageView
        android:id="@+id/ivClose"
        style="?actionButtonStyle"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        app:srcCompat="@drawable/ic_arrow_back_black_24dp"
        tools:ignore="RtlCompat" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/dp_52"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_50"
        android:src="@drawable/ic_splash_logo_new"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_120"
        android:fontFamily="@font/euclid_circular_b_semibold"
        android:text="@string/sign_up"
        android:textColor="@color/color_welcome_text"
        android:textSize="@dimen/sp_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_subtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="170dp"
        android:fontFamily="@font/euclid_circular_b_medium"
        android:text="@string/the_new_world_is_waiting_for_you"
        android:textColor="@color/color_welcome_text_subtitle"
        android:textSize="@dimen/sp_18"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/text_subtext"
        app:layout_constraintBottom_toTopOf="@+id/btn_next"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/euclid_circular_b_medium"
                    android:text="@string/user_name1"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:textColor="@color/color_welcome_text"
                    android:textSize="@dimen/sp_14" />

                    <EditText
                        android:id="@+id/etUserName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_50dp"
                        android:layout_marginRight="@dimen/dimen_5dp"
                        android:layout_weight="1"
                        android:background="@drawable/curved_gray_color"
                        android:fontFamily="@font/euclid_circular_b_medium"
                        android:hint="@string/user_name1"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:padding="@dimen/dp_10"
                        android:singleLine="true"
                        android:textColor="@color/allBlackTxtColor"
                        android:textSize="@dimen/sp_14"
                        android:digits="@string/digits_small"
                        android:lines="1" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/euclid_circular_b_medium"
                    android:text="@string/full_name"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:textColor="@color/color_welcome_text"
                    android:textSize="@dimen/sp_14" />

                    <EditText
                        android:id="@+id/etFullName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_50dp"
                        android:layout_marginRight="@dimen/dimen_5dp"
                        android:layout_weight="1"
                        android:background="@drawable/curved_gray_color"
                        android:fontFamily="@font/euclid_circular_b_medium"
                        android:hint="@string/first_name"
                        android:imeOptions="actionNext"
                        android:inputType="textCapWords"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:padding="@dimen/dp_10"
                        android:singleLine="true"
                        android:textColor="@color/allBlackTxtColor"
                        android:textSize="@dimen/sp_14" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/euclid_circular_b_medium"
                    android:text="@string/email_id"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:textColor="@color/color_welcome_text"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/etEmailid"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_50dp"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:layout_weight="1"
                    android:background="@drawable/curved_gray_color"
                    android:fontFamily="@font/euclid_circular_b_medium"
                    android:hint="@string/email"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:maxLength="30"
                    android:maxLines="1"
                    android:padding="@dimen/dp_10"
                    android:singleLine="true"
                    android:textColor="@color/allBlackTxtColor"
                    android:textSize="@dimen/sp_14" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/euclid_circular_b_medium"
                        android:text="@string/DateOfBirth"
                        android:textColor="@color/color_welcome_text"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tvDobWarning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:drawableStart="@drawable/ic_warning"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="start"
                        android:text="@string/dob_warning"
                        android:textColor="@color/light_black"
                        android:textSize="12sp"
                        android:visibility="invisible" />
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/ll_dob"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_50dp"
                    android:padding="@dimen/dp_10"
                    android:background="@drawable/curved_gray_color"
                    android:weightSum="5">

                    <TextView
                        android:id="@+id/textDob"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:padding="@dimen/dp_10"
                        android:text="@string/DateOfBirth"
                        android:textSize="@dimen/medium"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/ivCalendar"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_calendar_gray"
                        android:visibility="visible" />


                    <TextView
                        android:id="@+id/tvDob"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:background="@android:color/transparent"
                        android:hint="@string/DateOfBirth"
                        android:inputType="date"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_gravity="center_vertical"
                        android:maxLength="50"
                        android:maxLines="1"
                        android:textColor="@color/star_black"
                        android:textSize="@dimen/sp_14" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/euclid_circular_b_medium"
                    android:text="@string/gender"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:textColor="@color/color_welcome_text"
                    android:textSize="@dimen/sp_14" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_50dp"
                        android:background="@drawable/curved_gray_color"
                        android:entries="@array/array_gender" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:src="@drawable/ccp_down_arrow"/>

                </RelativeLayout>


                <EditText
                    android:id="@+id/etGender"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_50dp"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:layout_weight="1"
                    android:background="@drawable/curved_gray_color"
                    android:fontFamily="@font/euclid_circular_b_medium"
                    android:hint="@string/email"
                    android:visibility="gone"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:padding="@dimen/dp_10"
                    android:singleLine="true"
                    android:textColor="@color/allBlackTxtColor"
                    android:textSize="@dimen/sp_14" />


            </LinearLayout>



        </LinearLayout>



    </ScrollView>



<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="@id/btn_next"
    app:layout_constraintBottom_toBottomOf="@id/btn_next"
    app:layout_constraintRight_toLeftOf="@id/btn_next"
    app:layout_constraintLeft_toLeftOf="parent"
    android:textSize="@dimen/sp_18"
    android:fontFamily="@font/euclid_circular_b_medium"
    android:text="@string/_2_of_3"/>




    <Button
        android:id="@+id/btn_next"
        android:layout_width="@dimen/dp_220"
        android:layout_height="@dimen/dp_55"
        android:background="@drawable/rounded_rectangle_base_color"
        android:fontFamily="@font/euclid_circular_b_medium"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="@dimen/dimen_25dp"
        android:text="@string/next"
        app:layout_constraintRight_toRightOf="parent"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/color_white"
        android:textSize="@dimen/medium"
         />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/dp_10"
        android:visibility="gone" />


</androidx.constraintlayout.widget.ConstraintLayout>

</layout>