<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:orientation="vertical"
    android:background="#99000000">
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/drag_select_pause_position"
      android:textColor="@color/white"
      android:textSize="@dimen/sp_11"
      android:layout_marginTop="@dimen/dp_13"
      android:layout_gravity="center_horizontal"/>
  <chat.hola.com.app.DublyCamera.dubbing.CountDownDurationAdjustView
      android:id="@+id/countDownCaptureView"
      android:layout_width="match_parent"
      android:layout_height="@dimen/dp_72"
      android:layout_marginTop="@dimen/dp_13">

  </chat.hola.com.app.DublyCamera.dubbing.CountDownDurationAdjustView>
  <Button
      android:id="@+id/btStartCountDownCapture"
      android:layout_width="match_parent"
      android:layout_height="@dimen/dp_35"
      android:background="@drawable/gradient_curved_background"
      android:text="@string/start_countdown_shooting"
      android:textColor="@color/white"
      android:textSize="@dimen/sp_12"
      android:layout_marginTop="@dimen/dp_10"
      android:layout_marginBottom="@dimen/dp_34"
      android:layout_marginLeft="@dimen/dp_13"
      android:layout_marginRight="@dimen/dp_13"
      style="?android:attr/borderlessButtonStyle"
      android:textAllCaps="false"/>

</LinearLayout>