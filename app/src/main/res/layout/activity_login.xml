            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/thirty_dp"
            android:layout_marginEnd="@dimen/thirty_dp"
            android:fontFamily="@font/sf_pro_regular"
            android:gravity="center"
            android:text="@string/emailpswdtxt"
            android:textColor="@color/gray2"
            android:textSize="@dimen/sp_14" />

        <!--phone number edit-->
        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/dp_3"
            android:drawableEnd="@drawable/ic_phoneedit"
            android:drawablePadding="@dimen/dp_7"
            android:fontFamily="@font/sf_pro_semibold"
            android:text="9192939495"
            android:textColor="@color/star_black"
            android:textSize="@dimen/sp_14" />


        <EditText
            android:id="@+id/et_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fifty_dp"
            android:layout_marginTop="@dimen/twenty_dp"
            android:layout_marginEnd="@dimen/fifty_dp"
            android:gravity="center"
            android:hint="@string/hint_ver_code"
            android:inputType="number"
            android:letterSpacing="0.50"
            android:maxLength="4"
            android:maxLines="1"
            android:padding="@dimen/ten_dp"
            android:textSize="@dimen/sp_24"
            android:visibility="gone" />

        <!--password-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_30"
            android:background="@drawable/curved_gray_color"
            android:padding="@dimen/dp_15"
            android:weightSum="5">

            <TextView
                android:id="@+id/textPassword_email"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="@dimen/dp_10"
                android:text="@string/password"
                android:textSize="@dimen/medium"
                android:visibility="gone" />

            <EditText
                android:id="@+id/etPassword_email"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:background="@android:color/transparent"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:maxLength="50"
                android:maxLines="1"
                android:textColor="@color/star_black"
                android:textSize="@dimen/sp_14" />

            <ToggleButton
                android:id="@+id/tbPassword_email"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:background="@drawable/eye_toggle"
                android:disabledAlpha="?android:attr/disabledAlpha"
                android:textOff=""
                android:textOn="" />
        </LinearLayout>

        <TextView
            android:id="@+id/tV_forgotpswd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/twenty_dp"
            android:fontFamily="@font/sf_pro_regular"
            android:text="@string/forgot_password"
            android:textColor="@color/star_black"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tV_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/sp_14"
            android:fontFamily="@font/sf_pro_semibold"
            android:textColor="@color/star_black"
            android:textSize="@dimen/sp_16"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rL_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/dp_30"
            android:background="@drawable/curved_primary_color">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/fifty_dp"
                android:layout_marginTop="@dimen/ten_dp"
                android:layout_marginEnd="@dimen/fifty_dp"
                android:layout_marginBottom="@dimen/ten_dp"
                android:fontFamily="@font/sf_pro_semibold"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:text="@string/confirm"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp_16" />
        </RelativeLayout>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_40">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvNotMember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/not_a_member"
                android:textColor="@color/star_grey"
                android:textSize="@dimen/medium" />

            <TextView
                android:id="@+id/tvSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:text="@string/sign_up"
                android:textColor="@color/base_color"
                android:textSize="@dimen/medium" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_forget_mail_sent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/callingBlackTransparent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:src="@drawable/ic_done_green" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:fontFamily="@font/sf_pro_semibold"
                android:text="@string/check_your_mail"
                android:textColor="@color/star_black"
                android:textSize="@dimen/sp_24" />

            <TextView
                android:id="@+id/tv_sent_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:text="@string/resetPasswordsent"
                android:textColor="@color/light_black"
                android:textSize="@dimen/sp_16" />

            <RelativeLayout
                android:id="@+id/rl_sent_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_marginBottom="@dimen/dp_20"
                android:background="@drawable/curved_green_color"
                android:backgroundTint="#1EC310">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/fifty_dp"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:layout_marginEnd="@dimen/fifty_dp"
                    android:layout_marginBottom="@dimen/ten_dp"
                    android:fontFamily="@font/sf_pro_regular"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/ok"
                    android:textAllCaps="true"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/big" />
            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>



    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/dp_10"
        android:visibility="gone" />

</RelativeLayout>