                android:layout_weight="1">

                <Button
                    android:id="@+id/googleSignIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/google_button" />
            </FrameLayout>

