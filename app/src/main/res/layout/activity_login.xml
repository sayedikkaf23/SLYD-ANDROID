                android:ems="10"
                android:hint="@string/phoneNumber"
                android:inputType="number"
                android:maxLength="10"
                android:maxLines="1"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:textColor="@color/allBlackTxtColor"
                android:textSize="@dimen/fourteen_sp" />

            <ImageView
                android:id="@+id/ic_send"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/circle_primary"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/dp_7"
                android:src="@drawable/ic_send_icon"
                android:visibility="gone" />


        </RelativeLayout>

        <View
            android:id="@+id/phoneDivider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/divider"
            android:visibility="gone" />

        <!--email-->
        <RelativeLayout
            android:id="@+id/llEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_30"
            android:background="@drawable/curved_gray_color"
            android:padding="@dimen/dp_17"
            android:visibility="gone">


            <EditText
                android:id="@+id/etEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:layout_toStartOf="@+id/ic_send_email"
                android:background="@null"
                android:ems="10"
                android:hint="@string/emailHint"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:textColor="@color/allBlackTxtColor"
                android:textSize="@dimen/fourteen_sp" />

            <ImageView
                android:id="@+id/ic_send_email"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/circle_primary"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/dp_7"
                android:src="@drawable/ic_send_icon"
                android:visibility="gone" />


        </RelativeLayout>


        <!--password-->
        <LinearLayout
            android:id="@+id/llPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_0"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:visibility="gone"
            android:weightSum="5">

            <TextView
                android:id="@+id/textPassword"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="@dimen/dp_5"
                android:text="@string/password"
                android:textSize="@dimen/medium" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_25"
                android:layout_weight="3"
                android:background="@android:color/transparent"
                android:hint="@string/enter_password"
                android:inputType="textPassword"
                android:maxLength="20"
                android:maxLines="1"
                android:padding="@dimen/dp_5"
                android:textColor="@color/star_black"
                android:textSize="@dimen/medium" />

            <ToggleButton
                android:id="@+id/tbPassword"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_25"
                android:background="@drawable/eye_toggle"
                android:disabledAlpha="?android:attr/disabledAlpha"
                android:textOff=""
                android:textOn="" />
        </LinearLayout>

        <View
            android:id="@+id/passwordDivider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/divider"
            android:visibility="gone" />

        <!--otp-->
        <LinearLayout
            android:id="@+id/llotp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:visibility="gone"
            android:weightSum="5">

            <TextView
                android:id="@+id/textOtp"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="@dimen/dp_5"
                android:text="@string/sms_code"
                android:textSize="@dimen/medium" />

            <RelativeLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="3">

                <EditText
                    android:id="@+id/etOtp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/tvSend"
                    android:background="@android:color/transparent"
                    android:hint="@string/enter_otp"
                    android:inputType="number"
                    android:maxLength="4"
                    android:maxLines="1"
                    android:padding="@dimen/dp_5"
                    android:textColor="@color/star_black"
                    android:textSize="@dimen/medium" />

                <TextView
                    android:id="@+id/tvSend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:gravity="end"
                    android:text="@string/send"
                    android:textColor="@color/base_color" />

            </RelativeLayout>
        </LinearLayout>

        <View
            android:id="@+id/otpDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnForgotPassword"
            style="?actionButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical"
            android:text="@string/forgot_password"
            android:textAlignment="textEnd"
            android:textAllCaps="false"
            android:textColor="@color/base_color"
            android:textSize="@dimen/small"
            android:visibility="gone"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/loginSwitch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_30"
            android:padding="5dp"
            android:text="@string/login_via_otp"
            android:textColor="@color/base_color"
            android:visibility="gone" />

        <TextView
            android:id="@+id/loginByStarChatId"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:padding="@dimen/dp_5"
            android:text="@string/login_via_dublyid"
            android:textColor="@color/base_color"
            android:visibility="gone" />

        <!--Login With Divider-->
