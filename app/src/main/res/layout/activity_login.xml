                android:textColor="@color/color_black"
                android:textSize="@dimen/medium"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/countryFlag"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_30"
