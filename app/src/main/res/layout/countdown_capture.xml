<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <RelativeLayout
      android:id="@+id/rlTimeSpanValue"
      android:layout_width="match_parent"
      android:layout_height="@dimen/dp_15">
    <TextView
        android:id="@+id/tvDurationStartValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/dp_13"
        android:text="@string/zero_sec"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_11"/>

    <TextView
        android:id="@+id/tvDurationEndValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sixty_sec"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_11"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dp_13"/>
    <TextView
        android:id="@+id/tvShowCurrentTime"
        android:layout_width="@dimen/dp_30"
        android:layout_height="wrap_content"
        android:text="@string/sixty_sec"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_11"
        android:textAlignment="center"
        android:visibility="gone"/>
  </RelativeLayout>
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/dp_48"
      android:layout_below="@+id/rlTimeSpanValue"
      android:layout_marginTop="@dimen/dp_8">
    <View
        android:id="@+id/vCountDownBackground"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@drawable/countdown_view_background_shape"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/dp_13"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dp_13" />
    <View
        android:id="@+id/vCaptureFinishedDuration"
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:background="@drawable/countdown_finished_capture_background_shape"
        android:layout_marginStart="@dimen/dp_13"/>
    <ImageView
        android:id="@+id/ivOperateHandle"
        android:layout_width="@dimen/dp_30"
        android:layout_height="match_parent"
        android:src="@drawable/countdownline"
        android:scaleY="2"
        android:paddingStart="@dimen/dp_13"
        android:paddingEnd="@dimen/dp_13"
        />
  </RelativeLayout>
</RelativeLayout>