<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <RelativeLayout


                android:id="@+id/rl1"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_13"
                android:layout_weight="1"
                android:foreground="@drawable/ripple_selector">


                <androidx.appcompat.widget.AppCompatImageView

                    android:id="@+id/iv1"
                    android:layout_width="@dimen/dp_48"

                    android:layout_height="@dimen/dp_48"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/wallpaper_gallery"
                    android:padding="@dimen/dp_12"
                    android:tint="@color/color_white"
                    app:srcCompat="@drawable/ic_photo_library_black_24px" />


                <TextView
                    android:id="@+id/tv1"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="@string/string_644"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/sp_12" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl2"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_13"
                android:layout_weight="1"
                android:foreground="@drawable/ripple_selector">

                <androidx.appcompat.widget.AppCompatImageView

                    android:id="@+id/iv2"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_48"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/wallpaper_camera"
                    android:padding="@dimen/dp_12"
                    android:tint="@color/color_white"
                    app:srcCompat="@drawable/ic_photo_camera_white_24px" />


                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="@string/Camera"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/sp_12"


                    />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl3"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_13"
                android:layout_weight="1"
                android:foreground="@drawable/ripple_selector">

                <androidx.appcompat.widget.AppCompatImageView

                    android:id="@+id/iv3"

                    android:layout_width="@dimen/dp_48"


                    android:layout_height="@dimen/dp_48"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/wallpaper_solid"
                    android:padding="@dimen/dp_12"
                    android:tint="@color/color_white"
                    app:srcCompat="@drawable/ic_color_lens_black_24px" />


                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_8"

                    android:text="@string/SolidColor"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/sp_12"

                    />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl5"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_13"
                android:layout_weight="1"
                android:foreground="@drawable/ripple_selector">

                <androidx.appcompat.widget.AppCompatImageView

                    android:id="@+id/iv5"
                    android:layout_width="@dimen/dp_48"

                    android:layout_height="@dimen/dp_48"

                    android:layout_centerHorizontal="true"
                    android:background="@drawable/wallpaper_draw"
                    android:padding="@dimen/dp_12"
                    android:tint="@color/color_white"
                    app:srcCompat="@drawable/ic_colorize_black_24px" />


                <TextView
                    android:id="@+id/tv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv5"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="@string/Draw"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/sp_12"

                    />
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">


            <RelativeLayout
                android:id="@+id/rl4"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_13"
                android:layout_weight="1"
                android:foreground="@drawable/ripple_selector">

                <androidx.appcompat.widget.AppCompatImageView

                    android:id="@+id/iv4"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_48"


                    android:layout_centerHorizontal="true"
                    android:background="@drawable/wallpaper_library"
                    android:padding="@dimen/dp_12"
                    android:tint="@color/color_white"
                    app:srcCompat="@drawable/ic_local_library_black_24px" />


                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv4"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_8"


                    android:text="@string/Library"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl6"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_13"
                android:layout_weight="1"
                android:foreground="@drawable/ripple_selector">

                <androidx.appcompat.widget.AppCompatImageView

                    android:id="@+id/iv6"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_48"


                    android:layout_centerHorizontal="true"
                    android:background="@drawable/wallpaper_default"
                    android:padding="@dimen/dp_12"
                    android:tint="@color/color_white"
                    app:srcCompat="@drawable/ic_refresh_black_24px" />

                <TextView
                    android:id="@+id/tv6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv6"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_8"

                    android:text="@string/pref_resolution_default"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl7"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_13"
                android:layout_weight="1"
                android:foreground="@drawable/ripple_selector">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv7"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_48"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/wallpaper_no"
                    android:padding="@dimen/dp_12"


                    android:tint="@color/color_white"
                    app:srcCompat="@drawable/delete_black" />

                <TextView
                    android:id="@+id/tv7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv7"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_8"

                    android:text="@string/NoWallpaper"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>