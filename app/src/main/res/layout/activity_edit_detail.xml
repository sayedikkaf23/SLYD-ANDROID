<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/layoutToolbar"
        layout="@layout/layout_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutToolbar"
        android:padding="@dimen/page_padding">

        <!--email-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/titleEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_15"
            android:textSize="@dimen/sp_15"
            android:visibility="gone">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:theme="@style/TextLabel" />
        </com.google.android.material.textfield.TextInputLayout>


        <!--business username-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilBusinessUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_15"
            android:textSize="@dimen/sp_15"
            android:visibility="gone">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etBusinessUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="@string/digits_small"
                android:hint="@string/business_userName"
                android:imeOptions="actionDone"
                android:inputType="textPersonName"
                android:maxLength="15"
                android:maxLines="1"
                android:textColor="@color/star_black"
                android:theme="@style/TextLabel" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--business name-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilBusinessName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_15"
            android:textSize="@dimen/sp_15"
            android:visibility="gone">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etBusinessName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/business_name"
                android:imeOptions="actionDone"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:textColor="@color/star_black"
                android:theme="@style/TextLabel" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--business description-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/titleBusinessBio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_15"
            android:textSize="@dimen/sp_15"
            android:visibility="gone">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etBusinessBio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:hint="@string/business_description"
                android:imeOptions="normal"
                android:inputType="textMultiLine"
                android:lines="3"
                android:maxLines="5"
                android:scrollbars="vertical"
                android:textColor="@color/star_black"
                android:theme="@style/TextLabel" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--business website-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/titleBusinessWebsite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_15"
            android:textSize="@dimen/sp_15"
            android:visibility="gone">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etBusinessWebsite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/business_website"
                android:imeOptions="actionDone"
                android:inputType="textWebEditText"
                android:maxLines="1"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:theme="@style/TextLabel" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--business address-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/titleBusinessAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_15"
            android:textSize="@dimen/sp_15"
            android:visibility="gone">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etBusinessAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:drawableEnd="@drawable/ic_search"
                android:focusable="false"
                android:gravity="start"
                android:hint="@string/business_address"
                android:maxLines="5"
                android:minLines="2"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:theme="@style/TextLabel" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--business category-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/titleBusinessCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_15"
            android:textSize="@dimen/sp_15"
            android:visibility="gone">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etBusinessCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:drawableEnd="@drawable/ic_arrow_right_gray"
                android:focusable="false"
                android:hint="@string/business_category"
                android:inputType="none"
                android:maxLines="1"
                android:textColor="@color/star_black"
                android:theme="@style/TextLabel" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--business email-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/titleBusinessEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_15"
            android:textSize="@dimen/sp_15"
            android:visibility="gone">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etBusinessEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/business_email"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:theme="@style/TextLabel" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--business phone-->
        <RelativeLayout
            android:id="@+id/rlPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:padding="@dimen/dp_10"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvTitleMobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="@string/phone_numberr"
                android:textColor="@color/star_black" />

            <TextView
                android:id="@+id/tvRegion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTitleMobile"
                android:layout_centerVertical="true"
                android:drawablePadding="@dimen/dp_10"
                android:paddingLeft="4dp"
                android:paddingTop="8dp"
                android:paddingRight="4dp"
                android:paddingBottom="8dp"
                android:textColor="@color/red"
                android:textSize="@dimen/medium"
                app:drawableEndCompat="@drawable/ic_down_arrow_red" />

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/tvRegion"
                android:background="@null"
                android:inputType="phone|number"
                android:maxLength="15"
                android:maxLines="1"
                android:padding="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:textColor="@color/star_black"
                android:textSize="@dimen/medium" />

            <View
                android:id="@+id/phoneDivider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@+id/tvRegion"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@color/star_black" />

            <TextView
                android:id="@+id/tvError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phoneDivider"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="@color/red"
                android:textSize="@dimen/tiny" />
        </RelativeLayout>


        <Button
            android:id="@+id/btnSave"
            style="@style/ButtonNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/Save"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnVerify"
            style="@style/ButtonNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/verify"
            android:visibility="gone" />
    </RelativeLayout>

    <include
        android:id="@+id/layoutAlert"
        layout="@layout/layout_warning_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone" />
</RelativeLayout>